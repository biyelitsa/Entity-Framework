@model List<PersonelDbFirst.Models.DTO.PersonelDTO>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Personel Listesi</h2>
<form>
    <input type="submit" value="Yeni Giriş" formaction="/Personel/Create" />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Ikamet</th>
                <th>UnvanId</th>
                <th>Yonetici</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Ikamet</td>
                <td>@item.UnvanId</td>
                <td>@item.Yonetici</td>
                <td><a class="btn btn-danger" href="/Personel/Delete/@item.Id">Sil</a></td>
                <td><a class="btn btn-success" href="/Personel/Update/@item.Id">Güncelle</a></td>
            </tr>
            }
        </tbody>
    </table>
</form>
